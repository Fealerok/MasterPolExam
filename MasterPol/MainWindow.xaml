<Window x:Class="MasterPol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterPol"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="/Images/MasterPolIcon.ico">
    <Grid>
        <Image Source="/Images/MasterPolImage.png" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left"></Image>
        <TextBox Text="Мастер Пол" IsReadOnly="True" Height="100" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100, 0, 0, 0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe UI" BorderThickness="0"></TextBox>
        <TextBox Text="Введите логин" HorizontalAlignment="Left" Margin="232,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="307" Height="48" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" BorderThickness="0"/>
        <TextBox Name="LoginTB" HorizontalAlignment="Left" Margin="232,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="307" Height="48" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox HorizontalAlignment="Left" Margin="232,0,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Center" Width="307" Height="42" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True" BorderThickness="0"/>
        <PasswordBox Name="PasswordTB" HorizontalAlignment="Left" Margin="232,268,0,0" VerticalAlignment="Top" Width="307" Height="42" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Background="#67BA80" FontFamily="Segoe UI" Click="AuthHandle" Content="Войти" HorizontalAlignment="Left" Margin="306,359,0,0" VerticalAlignment="Top" Height="33" Width="158"/>

    </Grid>
</Window>
